@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInUser

    @if(SignInUser.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-left">
            <ul class="nav navbar-nav navbar-left">
                <button type="submit" style="width:auto; height:auto" class="nav-link btn btn-link py-0">
                    Logout: @User.Identity.Name
                </button>
            </ul>

        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-left">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@String.Format("{0}{1}",Context.Request.Path,Context.Request.QueryString)">&nbsp; LogIn&nbsp; </a>
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register" > Registrar </a>
        </ul>
    }